/* pages/history/history.wxss */
/* 每本书籍样式---Start */
.details{
  position: relative;
}
.content-item .title{
  position: relative;
  font-size: 20px;
  padding-left: 20rpx;
  line-height: 50rpx;
  height: 50rpx;
  text-align: center
}
.content-item .titleIcon {
  height: 50rpx;
  text-align: center;
  margin: 10rpx  0;
}
.content-item .titleIcon image{
  width: 50rpx;
  height: 50rpx;

}
.content-item .moreBook{
  position: absolute;
  right: 0;
  top: 0;
}
.content-item .content{
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}

.content .box-l .img{
  width: 230rpx;
  height: 300rpx;
}

.box-r{
  display: flex;
  margin-left: 20rpx;
  padding-bottom: 20rpx;
  flex-direction: column;
  justify-content: space-between;
}

.box-r .book-title{
  font-size: 16px;
  color: #333;
}

.box-r .book-desc{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  line-height: 1.5;
  color: #444;
  font-size: 14px;
}

.box-r .author{
  display: flex;
  justify-content: space-between;
  font-size: 12px;
}
/* 每本书籍样式---End */

.book-b{
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
  margin-right: 20rpx;
}

.book-b .btn{
  color: #333;
  margin: 0;
  width: 200rpx;
  font-size: 12px;
  background: #e9e9e9;
  border: 1px solid #e9e9e9;
}

.loginBtn{
  position: absolute;
  bottom: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 600rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #be5622;
  border-radius:30%; 
}

