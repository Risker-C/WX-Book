/* pages/user/user.wxss */
/* 上面部分--Start */
.top{
  width: 100%;
  height: 500rpx;
  background: #79caf5;
  position: relative;
}
.top .userInformation{
  height: 300rpx;
  padding: 30rpx 20rpx;
}
.top .userInformation .userImg{
  width: 250rpx;
  height: 250rpx;
  border-radius:125rpx; 
  position: absolute;
  left: 20rpx;
}
.top .userInformation .userSomething{
  position: absolute;
  left: 40%;
  top: 50rpx;
  height: 220rpx;

}

.userSomething .userName{
  font-size: 26px;
  line-height: 120rpx;
  height: 120rpx
}
.userSomething .usertalk{
  font-size: 16px;
  height: 100rpx;
  line-height: 100rpx;
}
.top .topBtn{
  height: 120rpx;
  border-top:1rpx solid rgb(12, 232, 240);
  display: flex;
  justify-content: centent;
  text-align: center;
  padding: 10rpx 0;
}
.top .topBtn .num{
  font-size: 18px;
  margin-bottom:5rpx; 
}
.top .topBtn .btn{
  font-weight: bold;
}
.top .leftBtn{
  border-right:1rpx solid rgb(12, 232, 240); 
  width: 50%;
  height: 100%;
}
.top .rightBtn{
  width: 50%;
  height: 100%;
}


/* 上面部分--End */

/* 下面部分 */
.bottom{
  position: relative;
  height: 600rpx;
}
.loginBtn{
  width: 200rpx;
  height: 200rpx;
  z-index: 998;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 50%;
  text-align: center;
  line-height: 200rpx;
  background: #0adfdfa2;
  color: #1296db;
  font-weight: bolder;
  font-size: 24px;
}
.bottom .loginBtnBgI{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 50%;
  width: 400rpx;
  z-index: 100;
}