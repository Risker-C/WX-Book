/* 下拉加载--Start */
.loadingMore{
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: #555
}

.loadingMore .loadingMoreImg{
  width: 50rpx;
  height: 50rpx;
}

.loadingMore loadingMoreText{
  line-height: 50rpx;
  height: 50rpx;
  padding-left: 20rpx;
}

.noMore{
  position: relative;
  line-height: 160rpx;
  height: 160rpx;
  text-align: center;
  background: #f1f1f1;
  font-size: 14px;
  color: #9e9e9e
}
.noMore .noMoreText{
  position: relative;
  z-index: 998;
  padding: 0 20rpx;
  background: #f1f1f1;
}
.noMore .noMoreLine{
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: 0;
  transform: translate(-50%,-50%);
  width: 500rpx;
  height: 1rpx;
  background-color: #ccc;
}
/* 下拉加载--End */